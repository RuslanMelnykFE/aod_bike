div(class="shop__column shop__column_big")
    div(class="shop__block block-shop")
        a(href="#" class="block-shop__item item") 
            span.item__logo
                img(src="img/logos/logo_bicycles.png", alt="logo_bicycles") 
                | shop now
            span.item__image 
                include ../../../mixins/picture/picture.pug 
                +picture('shop/shop/shop') 
        .block-shop__row 
            .block-shop__column 
                a(href="#" class="block-shop__item block-shop__item_little item") 
                    span.item__logo
                        img(src="img/logos/logo_bicycles.png", alt="logo_bicycles") 
                        | shop now
                    span.item__image 
                        include ../../../mixins/picture/picture.pug 
                        +picture('shop/shop_seat_brown/shop_seat_brown') 
            .block-shop__column
                a(href="#" class="block-shop__item block-shop__item_little item") 
                    span.item__logo
                        img(src="img/logos/logo_bicycles.png", alt="logo_bicycles") 
                        | shop now
                    span.item__image 
                        include ../../../mixins/picture/picture.pug 
                        +picture('shop/shop_bag/shop_bag')        